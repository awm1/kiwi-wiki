<div class="category_list"><h4>Kategorie: <%= @title  %></h4></div>
<br>
<h2><%= @page_name  %></h2>
<br>

<hr>

<h3>Porovnat revize:</h3>

<form action="/compare_page_revisions" method="post">
<input type="hidden" name="id" value="<%= @id %>">
<h4>1. revize</h4>
<% first=true %>
<% @revisions.each do |revision| %>
<input type="radio" name="first" value="<%= revision.id %>" <% if (first == true) %>
<%= "checked" %>
<% first=false %>
<% end %>><%= Time.parse(revision.create_time.to_s).strftime("%Y-%m-%d %H:%M:%S").to_s %>
<% if (revision.id == @current_revision) %>
<%= " − [AKTUÁLNÍ]" %>
<% end %>
</input><br>
<% end  %>

<hr>

<h4>2. revize</h4>
<% first=true %>
<% @revisions.each do |revision| %>
<input type="radio" name="second" value="<%= revision.id %>" <% if (first == true) %>
<%= "checked" %>
<% first=false %>
<% end %>><%= Time.parse(revision.create_time.to_s).strftime("%Y-%m-%d %H:%M:%S").to_s %>
<% if (revision.id == @current_revision) %>
<%= " − [AKTUÁLNÍ]" %>
<% end %>
</input><br>
<% end  %>

<hr>
<input type="submit" class="button" value="Zobrazit rozdíly">
</form>
