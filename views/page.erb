<h2><%= @title %>

<hr>

<%= @body %>

<h2>Historie</h2>

<ul>
<% @revisions.each do |revision| %>
<li>
  <% if revision == params[:timestamp] %>
    <strong>
    <%= Time.at(revision.to_i).strftime('%d/%m/%Y %H:%M') %>
    </strong>
  <% else %>
    <a href="/pages/<%= @title %>/revisions/<%= revision %>">
      <%= Time.at(revision.to_i).strftime('%d/%m/%Y %H:%M') %>
    </a>
  <% end %>
<% end %>
</ul>
